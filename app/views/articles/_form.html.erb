<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
<%= form_for(@article) do |f| %>
<% @article.errors.full_messages.each do |message| %>
<div class="be-red white">
  * <%= message%>
</div>
<% end %>
<div class="field">
  <%= f.text_field :title, placeholder: "Título", class:"form-control" %>
</div>
<div class="field">
  Portada: <%= f.file_field :cover%>
</div>
<div class="field">
  <%= f.trix_editor :body, placeholder: "Escribe aquí el artículo", class:"form-control" %>
</div>
<div class="field">
  <label>Categorías</label>
  <% @categories.each do |category| %>
  <div class="field">
    <%= check_box_tag "categories[]", category.id %> <%= category.name %>
  </div>
  
  <% end %>
</div>

<div class="field">
  <%= f.submit "Guardar", class:"btn be-red white"%>
</div>
<% end %>