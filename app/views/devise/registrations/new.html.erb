<meta name="viewport" content="width=device.width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">

<div class="row center-xs">
  <div class="col-xs-8 col-md-6">
    <div class="box text-left">
      <h2>Crear cuenta</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email, "Correo" %><br />
          <%= f.email_field :email, autofocus: true, placeholder: "alguien@example.com", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, "Contraseña" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder:"Ingresa tu contraseña", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirma tu contraseña" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Repite tu contraseña",class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Registrarse", class: "btn be-red white" %>
        </div>
      <% end %>

      <div class="actions">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>